<div role="dialog" tabindex="-1" class="modal fade" id="ModalEdit{{ etiqueta.id }}">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title ">{{ etiqueta.nombre }}</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="mt-3" action="{{ 'mantenimiento/etiquetas/actualizaretiqueta'|url }}" method="POST">
                    <div class="row">
                        <div class="col">
                            <div class="alert-container"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 d-none">
                            <div class="form-group">
                                <input type="text" class="form-control" value="{{ etiqueta.id }}" name="id" id="id">
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="d-none d-md-block" for="nombre">Etiqueta</label>
                                <input type="text" class="form-control" placeholder="Etiqueta" id="etiqueta" name="nombre" value="{{ etiqueta.nombre }}">
                                <span class="form-validation-failed text-danger" data-key="calle"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="float-right">
                                <button class="btn btn-dark" type="button" data-dismiss="modal">Cerrar</button>
                                <button class="btn btn-outline-success ml-2" type="submit" data-ajax="true">Guardar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>