{% extends 'partials/layout_coreiu.twig' %}
{% block content %}
    <div class="pb-2 mt-4 mb-2 border-bottom">
        <h4>Ficha de Registro de Direcciones</h4>
    </div>
    <form class="mt-3" action="{{ 'mantenimiento/direcciones/actualizardireccion'|url }}" method="POST">
        <div class="row">
            <div class="col">
                <div class="alert-container"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-none">
                <div class="form-group">
                    <input type="text" class="form-control" id="id" name="id" value="{{ direccion.id }}">
                </div>
            </div>
            <div class="col-md-4 col-sm-12">
                <div class="form-group">
                    <label class="d-none d-md-block" for="password">Pais</label>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control d-none" id="pais_id" name="pais_id" readonly value="{{ direccion.pais.id }}">
                        <input type="text" class="form-control" id="paisnombre" name="paisnombre" readonly value="{{ direccion.pais.pais }}">
                        <div class="input-group-append">
                            <button class="btn btn-outline-info" type="button"  data-toggle="modal" data-target="#SearchPais">Buscar</button>
                        </div>
                    </div>
                    <span class="form-validation-failed text-danger" data-key="pais_id"></span>
                </div>
            </div>
            <div class="col-md-4 col-sm-12">
                <div class="form-group">
                    <label class="d-none d-md-block" for="password">Estado</label>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control d-none" id="estado_id" name="estado_id" readonly value="{{ direccion.estado.id }}">
                        <input type="text" class="form-control" id="estadonombre" name="estadonombre" readonly value="{{ direccion.estado.estado }}">
                        <div class="input-group-append">
                            <button class="btn btn-outline-info" type="button"  data-toggle="modal" data-target="#SearchEstado">Buscar</button>
                        </div>
                    </div>
                    <span class="form-validation-failed text-danger" data-key="estado_id"></span>
                </div>
            </div>
            <div class="col-md-4 col-sm-12">
                <div class="form-group">
                    <label class="d-none d-md-block" for="password">Ciudad</label>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control d-none" id="ciudad_id" name="ciudad_id" readonly value="{{ direccion.ciudad.id }}">
                        <input type="text" class="form-control" id="ciudadnombre" name="ciudadnombre" readonly value="{{ direccion.ciudad.ciudad }}">
                        <div class="input-group-append">
                            <button class="btn btn-outline-info" type="button"  data-toggle="modal" data-target="#SearchCiudad">Buscar</button>
                        </div>
                    </div>
                    <span class="form-validation-failed text-danger" data-key="ciudad_id"></span>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="form-group">
                    <label class="d-none d-md-block" for="nombre">Calle</label>
                    <input type="text" class="form-control" placeholder="Calle" id="calle" name="calle" value="{{ direccion.calle }}">
                    <span class="form-validation-failed text-danger" data-key="calle"></span>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="d-none d-md-block" for="apaterno">Numero ext</label>
                    <input type="text" class="form-control" placeholder="Número ext" id="numero" name="numero" value="{{ direccion.numero }}">
                    <span class="form-validation-failed text-danger" data-key="numero"></span>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="d-none d-md-block" for="amaterno">Avenida</label>
                    <input type="text" class="form-control" placeholder="Avenida" id="avenida" name="avenida" value="{{ direccion.avenida }}">
                    <span class="form-validation-failed text-danger" data-key="avenida"></span>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="d-none d-md-block" for="email">Colonia</label>
                    <input type="text" class="form-control" placeholder="Colonia" id="colonia" name="colonia" value="{{ direccion.colonia }}">
                    <span class="form-validation-failed text-danger" data-key="colonia"></span>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="d-none d-md-block" for="password">Codigo Postal</label>
                    <input type="text" class="form-control" placeholder="Código Postal" id="codigopostal" name="codigopostal" value="{{ direccion.codigopostal }}">
                    <span class="form-validation-failed text-danger" data-key="codigopostal"></span>
                </div>
            </div>

            <div class="col-sm-12">
                <div class="form-group">
                    <label class="d-none d-md-block" for="password">Propietario</label>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control d-none" id="usuario_id" name="usuario_id" readonly value="{{ direccion.usuario.id }}">
                        <input type="text" class="form-control" id="usuarionombre" name="usuarionombre" readonly value="{{ direccion.usuario.nombre ~ ' ' ~ direccion.usuario.apaterno ~ ' ' ~ direccion.usuario.amaterno }}">
                        <div class="input-group-append">
                            <button class="btn btn-outline-info" type="button"  data-toggle="modal" data-target="#SearchUsuario">Buscar</button>
                        </div>
                    </div>
                    <span class="form-validation-failed text-danger" data-key="ciudad_id"></span>
                </div>
            </div>
            <div class="col-12">
                <div class="float-right">
                    <a href="{{ 'mantenimiento/direcciones'|url }}" class="btn btn-dark">Cancelar</a>
                    <button class="btn btn-outline-success ml-2" type="submit" data-ajax="true">Guardar</button>
                </div>
            </div>
        </div>
    </form>

    <div role="dialog" tabindex="-1" class="modal fade" id="SearchPais">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title ">Busqueda de Pais</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="table-responsive mb-4">
                        <table class="table datatable table-sm table-hover table-striped">
                            <thead class="">
                            <tr class="">
                                <th>PAIS</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody class="">
                            {% for pais in paises %}
                                <tr>
                                    <td>{{ pais.pais }}</td>
                                    <td>
                                        <button class="btn btn-success btn-block seleccion" data-target="{{ pais.id }}" data-pais="{{ pais.pais }}">Seleccionar</button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <caption>Listado de Estados: {{ estados.count }}</caption>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div role="dialog" tabindex="-1" class="modal fade" id="SearchEstado">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title ">Busqueda de Estado</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="table-responsive mb-4">
                        <table class="table datatable table-sm table-hover table-striped">
                            <thead class="">
                            <tr class="">
                                <th>NOMBRE</th>
                                <th>PAIS</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody class="">
                            {% for estado in estados %}
                                <tr>
                                    <td>{{ estado.estado }}</td>
                                    <td>{{ estado.paises.pais }}</td>
                                    <td>
                                        <button class="btn btn-success btn-block seleccion" data-target="{{ estado.id }}" data-estado="{{ estado.estado }}">Seleccionar</button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <caption>Listado de Estados: {{ estados.count }}</caption>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div role="dialog" tabindex="-1" class="modal fade" id="SearchCiudad">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title ">Busqueda de Ciudad</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="table-responsive mb-4">
                        <table class="table datatable table-sm table-hover table-striped">
                            <thead class="">
                            <tr class="">
                                <th>NOMBRE</th>
                                <th>ESTADO</th>
                                <th>PAIS</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody class="">
                            {% for ciudad in ciudades %}
                                <tr>
                                    <td>{{ ciudad.ciudad }}</td>
                                    <td>{{ ciudad.estados.estado }}</td>
                                    <td>{{ ciudad.estados.paises.pais }}</td>
                                    <td>
                                        <button class="btn btn-success btn-block seleccion" data-target="{{ ciudad.id }}" data-ciudad="{{ ciudad.ciudad }}">Seleccionar</button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <caption>Listado de Estados: {{ estados.count }}</caption>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div role="dialog" tabindex="-1" class="modal fade" id="SearchUsuario">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title ">Busqueda de Ciudad</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="table-responsive mb-4">
                        <table class="table datatabletable-sm table-hover table-striped">
                            <thead class="">
                            <tr class="text-center">
                                <th>NOMBRE</th>
                                <th>EMAIL</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody class="text-center">
                            {% for usuario in usuarios %}
                                <tr>
                                    <td>{{ usuario.nombre ~ ' ' ~ usuario.apaterno ~ ' ' ~ usuario.amaterno }}</td>
                                    <td>{{ usuario.correo }}</td>
                                    <td>
                                        <button class="btn btn-success btn-block seleccion" data-target="{{ usuario.id }}" data-usuario="{{ usuario.nombre ~ ' ' ~ usuario.apaterno ~ ' ' ~ usuario.amaterno  }}">Seleccionar</button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <caption>Listado de Usuarios: {{ usuarios.count }}</caption>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script>
        $('body').on('click','#SearchPais .seleccion',function(){
            var codigo=$(this).data('target');
            $('#SearchPais').modal('hide');
            $('#pais_id').val(codigo);
            $('#paisnombre').val($(this).data('pais'));
        });

        $('body').on('click','#SearchEstado .seleccion',function(){
            var codigo=$(this).data('target');
            $('#SearchEstado').modal('hide');
            $('#estado_id').val(codigo);
            $('#estadonombre').val($(this).data('estado'));
        });

        $('body').on('click','#SearchCiudad .seleccion',function(){
            var codigo=$(this).data('target');
            $('#SearchCiudad').modal('hide');
            $('#ciudad_id').val(codigo);
            $('#ciudadnombre').val($(this).data('ciudad'));
        });

        $('body').on('click','#SearchUsuario .seleccion',function(){
            var codigo=$(this).data('target');
            $('#SearchUsuario').modal('hide');
            $('#usuario_id').val(codigo);
            $('#usuarionombre').val($(this).data('usuario'));
        });
    </script>
{% endblock %}