{% extends 'partials/layout.twig' %}

{% block content %}
    <div class="pb-2 mt-4 mb-2 border-bottom">
        <h4>
            {% if model.id %}
                {{ model.nombre ~ ' ' ~ model.apaterno ~ ' ' ~ model.amaterno }}
            {% endif %}
        </h4>
    </div>
    <form class="mt-3" action="{{ 'mantenimiento/actualizaru'|url }}" method="POST">
        <div class="row">
            <div class="col-12 d-none">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="id" id="id" name="id" value="{{ model.id }}">
                </div>
            </div>
            <div class="col-md col-sm-12">
                <div class="form-group">
                    <label class="d-none d-md-block" for="nombre">Nombre</label>
                    <input type="text" class="form-control" placeholder="Nombre" id="nombre" name="nombre" value="{{ model.nombre }}">
                </div>
            </div>
            <div class="col-md col-sm-6">
                <div class="form-group">
                    <label class="d-none d-md-block" for="apaterno">Apellido Paterno</label>
                    <input type="text" class="form-control" placeholder="Apellido Paterno" id="apaterno" name="apaterno" value="{{ model.apaterno }}">
                </div>
            </div>
            <div class="col-md col-sm-6">
                <div class="form-group">
                    <label class="d-none d-md-block" for="amaterno">Apellido Materno</label>
                    <input type="text" class="form-control" placeholder="Apellido Materno" id="amaterno" name="amaterno" value="{{ model.amaterno }}">
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <label class="d-none d-md-block" for="email">Correo Electrónico</label>
                    <input type="email" class="form-control" placeholder="Correo Electrónico" readonly id="email" name="correo" value="{{ model.correo }}">
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <label class="d-none d-md-block" for="password">Contraseña</label>
                    <input type="password" autocomplete="off" class="form-control" placeholder="Contraseña" id="password" name="password">
                    {% if model.id %}
                        <span class="form-text text-muted">Para actualizar la contraseña escriba una nueva</span>
                    {% endif %}
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <label class="d-none d-md-block" for="rol">Rol</label>
                    <select class="form-control" id="rol" name="rol_id">
                        <option value="" disabled>Elegir</option>
                        {% for rol in roles %}
                            <option value="{{ rol.id }}" {% if(model.rol_id == rol.id) %} selected {% endif %}>{{ rol.nombre }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="col">
                <div class="float-right">
                    <a href="{{ 'mantenimiento/usuarios'|url }}" class="btn btn-secondary">Cancelar</a>
                    <button class="btn btn-primary ml-2" type="submit">Guardar</button>
                </div>
            </div>
        </div>
    </form>

{% endblock %}