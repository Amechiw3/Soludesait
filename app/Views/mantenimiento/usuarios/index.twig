{% extends 'partials/layout.twig' %}

{% block content %}
    <div class="pb-2 mt-4 mb-2 border-bottom">
        <h4>
            Cat√°logo de Usuarios
            <a href="{{ 'mantenimiento/nusuario'|url }}" class="btn btn-success float-right">
                <i class="fa fa-plus"></i>
            </a>
        </h4>
    </div>
    <div class="table-responsive mb-4">
        <table class="table table-dark table-sm table-hover table-striped">
            <thead class="">
                <tr class="text-center">
                    <th>NOMBRE</th>
                    <th>APELLIDOS</th>
                    <th>EMAIL</th>
                    <th>ROL</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="text-center">
            {% for usuario in usuarios %}
                <tr>
                    <td>{{ usuario.nombre }}</td>
                    <td>{{ usuario.apaterno ~ ' ' ~ usuario.amaterno }}</td>
                    <td>{{ usuario.correo }}</td>
                    <td>{{ usuario.rol.nombre }}</td>
                    <td>
                        <div class="btn-group">
                            <a href="{{ ('mantenimiento/actualizaru/' ~ usuario.id)|url }}" class="btn btn-link text-info">
                                <i class="fa fa-pencil-alt"></i>
                            </a>
                            <a href="{{ ('mantenimiento/eliminaru/' ~ usuario.id)|url }}" class="btn btn-link text-danger">
                                <i class="fa fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <caption>Listado de Usuarios: {{ usuarios.count }}</caption>
    </div>
{% endblock %}