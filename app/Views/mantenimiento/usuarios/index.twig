{% extends 'partials/layout_coreiu.twig' %}

{% block content %}
    <div class="pb-2 mt-4 mb-2">
        <h4>
            Cat√°logo de Usuarios
            <button type="button" data-toggle="modal" data-target="#ModalAdd" class="btn btn-success float-right">
                <i class="fa fa-plus"></i>
            </button>
        </h4>
        {% include 'mantenimiento/usuarios/ModalAdd.twig' %}
    </div>
    <div class="table-responsive mb-4">
        <table class="table datatable table-sm table-hover table-striped">
            <thead class="">
            <tr>
                <th>NOMBRE</th>
                <th>APELLIDOS</th>
                <th>EMAIL</th>
                <th>ROL</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for usuario in usuarios %}
                <tr>
                    <td>{{ usuario.nombre }}</td>
                    <td>{{ usuario.apaterno ~ ' ' ~ usuario.amaterno }}</td>
                    <td>{{ usuario.correo }}</td>
                    <td>{{ usuario.rol.nombre }}</td>
                    <td>
                        <div class="btn-group d-flex">
                            <a href="{{ ('mantenimiento/usuarios/actualizar/' ~ usuario.id)|url }}" class="btn btn-link text-info w-100 text-right">
                                <i class="fa fa-pencil-alt"></i>
                            </a>
                            <button class="btn btn-link text-danger w-100 text-left eliminar" data-target="{{ usuario.id }}">
                                <i class="fa fa-trash-alt"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}