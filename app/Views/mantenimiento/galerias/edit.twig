{% extends 'partials/layout_coreiu.twig' %}

{% block content %}
    <div class="pb-2 mt-4 mb-2 border-bottom">
        <h4>
            Cat√°logo de Galeria
            <button type="button" data-toggle="modal" data-target="#ModalAdd" class="btn btn-success float-right">
                <i class="fa fa-plus"></i>
            </button>
        </h4>
        {% include 'mantenimiento/galerias/ModalAdd.twig' %}
    </div>
    <div class="table-responsive mb-4">
        <table class="table datatable table-sm table-hover table-striped">
            <thead class="">
                <tr class="text-center">
                    <th>PRODUCTO</th>
                    <th>IMAGEN</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="text-center">
                {% for galeria in galerias %}
                    <tr>
                        <td>{{ galeria.producto.nombre }}</td>
                        <td>{{ galeria.nombre }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ ('mantenimiento/actualizaru/' ~ galeria.id)|url }}" class="btn btn-link text-info">
                                    <i class="fa fa-pencil-alt"></i>
                                </a>
                                <a href="{{ ('mantenimiento/eliminaru/' ~ galeria.id)|url }}" class="btn btn-link text-danger">
                                    <i class="fa fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <caption>Listado de galerias: {{ galerias.count }}</caption>
    </div>
{% endblock %}