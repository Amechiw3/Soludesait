{% extends 'partials/layout.twig' %}

{% block content %}
    <div class="pb-2 mt-4 mb-2 border-bottom">
        <h4>
            {% if datos.id %}
                {{ datos.nombre }}
            {% endif %}
        </h4>
    </div>
    <form class="mt-3" action="{{ 'mantenimiento/actualizarp'|url }}" method="POST">
        <div class="row">
            <div class="col-12 d-none">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="id" id="id" name="id" value="{{ datos.id }}">
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <label class="d-none d-md-block" for="nombre">Nombre</label>
                    <input type="text" class="form-control" placeholder="Nombre" id="nombre" name="nombre" value="{{ datos.nombre }}">
                </div>
            </div>
            <div class="col-12">
                <div class="float-right">
                    <a href="{{ 'mantenimiento/permisos'|url }}" class="btn btn-secondary">Cancelar</a>
                    <button class="btn btn-primary ml-2" type="submit" data-ajax="true">Guardar</button>
                </div>
            </div>
        </div>
    </form>

{% endblock %}