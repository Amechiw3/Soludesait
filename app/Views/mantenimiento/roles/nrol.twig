{% extends 'partials/layout.twig' %}

{% block content %}
    <div class="pb-2 mt-4 mb-2 border-bottom">
        <h4>Ficha de Registro de Rol</h4>
    </div>
    <form class="mt-3" action="{{ 'mantenimiento/grol'|url }}" method="POST">
        <div class="row">
            <div class="col">
                <div class="alert-container"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <label class="d-none d-md-block" for="nombre">Nombre del rol</label>
                    <input type="text" class="form-control" placeholder="Nombre" id="nombre" name="nombre">
                    <span class="form-validation-failed text-danger" data-key="nombre"></span>
                </div>
            </div>
            <div class="col">
                <div class="float-right">
                    <a href="{{ 'mantenimiento/permisos'|url }}" class="btn btn-secondary">Cancelar</a>
                    <button class="btn btn-primary ml-2" type="submit" data-ajax="true">Guardar</button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}