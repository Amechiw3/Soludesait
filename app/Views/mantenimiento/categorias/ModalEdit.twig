<div role="dialog" tabindex="-1" class="modal fade" id="ModalEdit{{ categoria.id }}">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title ">{{ categoria.nombre }}</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="{{ 'mantenimiento/categorias/actualizarcategoria'|url }}" method="POST" class="mt-2">
                    <div class="row">
                        <div class="col">
                            <div class="alert-container"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 d-none">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="id" id="id" name="id" value="{{ categoria.id }}">
                            </div>
                        </div>
                        <div class="col-md-12 col-sm-12">
                            <div class="form-group">
                                <label class="d-none d-md-block" for="nombre">Nombre</label>
                                <input type="text" class="form-control" placeholder="Nombre" id="nombre" name="nombre" value="{{ categoria.nombre }}">
                                <span class="form-validation-failed text-danger" data-key="nombre"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="float-right">
                                <button class="btn btn-dark" type="button" data-dismiss="modal">Cerrar</button>
                                <button class="btn btn-outline-success ml-2" data-ajax="true">Guardar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>