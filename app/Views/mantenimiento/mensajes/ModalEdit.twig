<div role="dialog" tabindex="-1" class="modal fade" id="ModalEdit{{ mensaje.id }}">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title ">Ficha de Registro de Mensaje</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="mt-3" action="{{ 'mantenimiento/mensajes/actualizar'|url }}" method="POST">
                    <div class="row">
                        <div class="col">
                            <div class="alert-container"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 d-none">
                            <div class="form-group">
                                <input type="text" class="form-control" id="id" name="id" value="{{ mensaje.id }}">
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="d-none d-md-block" for="amaterno">Nombre Completo</label>
                                <input type="text" class="form-control" placeholder="Nombre Completo" id="nombre" name="nombre" value="{{ mensaje.nombre }}">
                                <span class="form-validation-failed text-danger" data-key="nombre"></span>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="d-none d-md-block" for="email">Correo Electronico</label>
                                <input type="email" class="form-control" placeholder="Correo Electronico" id="correo" name="correo" value="{{ mensaje.correo }}">
                                <span class="form-validation-failed text-danger" data-key="correo"></span>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="d-none d-md-block" for="password">Mensaje</label>
                                <textarea class="form-control" id="mensaje" name="mensaje">{{ mensaje.mensaje }}</textarea>
                                <span class="form-validation-failed text-danger" data-key="mensaje"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="float-right">
                                <button class="btn btn-dark" type="button" data-dismiss="modal">Cerrar</button>
                                <button class="btn btn-outline-success ml-2" type="submit" data-ajax="true">Guardar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>