<div role="dialog" tabindex="-1" class="modal fade" id="ModalEdit{{ cupon.id }}">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title ">{{ cupon.codigo }}</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="mt-3" action="{{ 'mantenimiento/cupones/actualizarcupon'|url }}" method="POST">
                    <div class="row">
                        <div class="col">
                            <div class="alert-container"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 d-none">
                            <div class="form-group">
                                <input type="text" class="form-control" id="id" name="id" value="{{ cupon.id }}">
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="d-none d-md-block" for="nombre">Codigo</label>
                                <input type="text" class="form-control" placeholder="Código" id="codigo" name="codigo" value="{{ cupon.codigo }}">
                                <span class="form-validation-failed text-danger" data-key="codigo"></span>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="d-none d-md-block" for="apaterno">Descripcion</label>
                                <input type="text" class="form-control" placeholder="Descripcion" id="descripcion" name="descripcion" value="{{ cupon.descripcion }}">
                                <span class="form-validation-failed text-danger" data-key="descripcion"></span>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="d-none d-md-block" for="amaterno">Descuento</label>
                                <input type="text" class="form-control" placeholder="Descuento" id="descuento" name="descuento" value="{{ cupon.descuento }}">
                                <span class="form-validation-failed text-danger" data-key="descuento"></span>
                            </div>
                        </div>
                        <div class="col-md col-sm-12">
                            <div class="form-group">
                                <label class="d-none d-md-block" for="email">Fecha de Inicio</label>
                                <input type="date" class="form-control" id="inicio_fecha" name="inicio_fecha" value="{{ cupon.inicio_fecha|date('Y-m-d') }}">
                                <span class="form-validation-failed text-danger" data-key="inicio_fecha"></span>
                            </div>
                        </div>
                        <div class="col-md col-sm-12">
                            <div class="form-group">
                                <label class="d-none d-md-block" for="password">Fecha de Fin</label>
                                <input type="date" class="form-control" id="fin_fecha" name="fin_fecha" value="{{ cupon.fin_fecha|date('Y-m-d') }}">
                                <span class="form-validation-failed text-danger" data-key="fin_fecha"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="float-right">
                                <button class="btn btn-dark" type="button" data-dismiss="modal">Cerrar</button>
                                <button class="btn btn-outline-success ml-2" data-ajax="true">Guardar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>