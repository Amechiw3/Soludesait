<div role="dialog" tabindex="-1" class="modal fade" id="ModalAdd">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title ">Ficha de Registro de Cupones</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="mt-3" action="{{ 'mantenimiento/cupones/guardarcupon'|url }}" method="POST">
                    <div class="row">
                        <div class="col">
                            <div class="alert-container"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="d-none d-md-block" for="nombre">Codigo</label>
                                <input type="text" class="form-control" placeholder="Código" id="codigo" name="codigo">
                                <span class="form-validation-failed text-danger" data-key="codigo"></span>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="d-none d-md-block" for="apaterno">Descripcion</label>
                                <input type="text" class="form-control" placeholder="Descripcion" id="descripcion" name="descripcion">
                                <span class="form-validation-failed text-danger" data-key="descripcion"></span>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="d-none d-md-block" for="amaterno">Descuento</label>
                                <input type="text" class="form-control" placeholder="Descuento" id="descuento" name="descuento">
                                <span class="form-validation-failed text-danger" data-key="descuento"></span>
                            </div>
                        </div>
                        <div class="col-md col-sm-12">
                            <div class="form-group">
                                <label class="d-none d-md-block" for="email">Fecha de Inicio</label>
                                <input type="date" class="form-control" id="inicio_fecha" name="inicio_fecha">
                                <span class="form-validation-failed text-danger" data-key="inicio_fecha"></span>
                            </div>
                        </div>
                        <div class="col-md col-sm-12">
                            <div class="form-group">
                                <label class="d-none d-md-block" for="password">Fecha de Fin</label>
                                <input type="date" class="form-control" id="fin_fecha" name="fin_fecha">
                                <span class="form-validation-failed text-danger" data-key="fin_fecha"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="float-right">
                                <button class="btn btn-dark" type="button" data-dismiss="modal">Cerrar</button>
                                <button class="btn btn-outline-success ml-2" type="submit" data-ajax="true">Guardar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>