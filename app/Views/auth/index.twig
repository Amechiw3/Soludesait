{% extends 'partials/basic_layout.twig' %}
{% block content %}
    <div class="login-dark" >
        <form action="{{ 'auth/signin'|url }}" method="POST" role="form">
            <div class="alert-container"></div>
            <div class="form">
                <h2 class="text-center sr-only">{{ company_name|upper }}</h2>
                <div class="illustration">
                    Iniciar Sesión
                    <!--<a href=""><img src="{{ ('img/logo.svg')|public }}" alt="{{ company_name }}"></a>-->
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="correo" placeholder="Correo electrónico" autofocus required/>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Contraseña" />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit" data-ajax="true">Acceder</button>
                </div>
                <a href="#" class="forgot">¿Olvidaste tu contraseña?</a>
            </div>
        </form>
    </div>
{% endblock %}